<h2> コメント一覧 </h2>
  <% @article.comments.each do |comment| %>
  <p>
    <strong>名前</strong>
    <%= comment.commenter %>
  </p>
<p>
  <%= comment.created_at %>
</p>
<p>
  <strong>コメント</strong>
  <%= comment.body %>
</p>
<p>
  <%= link_to 'コメントを削除します', [comment.article, comment],
  method: :Delete,
  data: {confirm: '本当に削除しますか?'} %>
</p>
<% end %>
